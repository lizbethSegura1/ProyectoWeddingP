<Window x:Class="EsbozoProyecto1.PaginaPrincipal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EsbozoProyecto1"
        mc:Ignorable="d"
        Title="PaginaPrincipal" Height="866.054" Width="1200">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>


        <TabControl Grid.Row="1" Name="tabControl">
            <TabItem Header="Inicio 1">
                <!-- contenido del tab 1 -->
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <StackPanel Width="1200" Height="200" VerticalAlignment="Center" Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button x:Name="botonInicio" Content="Inicio 1" Margin="50" Click="OnTabButtonClick" Width="125" Height="97" Background="White"/>
                        <Button x:Name="botonProveedores" Content="Proveedores 2" Margin="50" Click="OnTabButtonClick" Width="125" Height="97" Background="White"/>
                        <Button x:Name="botonTareas" Content="Tareas 3"  Margin="50" Click="OnTabButtonClick" Width="125" Height="97" Background="White"/>
                        <Button x:Name="botonInvitados" Content="Invitados 4" Margin="50" Click="OnTabButtonClick" Width="125" Height="97"  Background="White"/>
                        <Button x:Name="botonPresupuesto" Content="Presupuesto 5" Margin="50" Click="OnTabButtonClick"  Width="125" Height="97"  Background="White"/>
                    </StackPanel>
                </Grid>
            </TabItem>
            <TabItem Header="Proveedores 2">
                <!-- contenido del tab 1 -->
            </TabItem>
            <TabItem Header="Tareas 3">
                <!-- contenido del tab 2 -->
            </TabItem>
            <TabItem x:Name="tabInvitados" Header="Invitados 4">
                <!-- contenido del tab 3 -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="143*"/>
                        <ColumnDefinition Width="13*"/>
                        <ColumnDefinition Width="438*"/>
                    </Grid.ColumnDefinitions>
                    <Label Content="Mis Invitados" HorizontalAlignment="Left" Margin="23,34,0,0" VerticalAlignment="Top" FontFamily="Monotype Corsiva" FontWeight="Bold" FontSize="25" Height="39" Width="143"/>
                    <ListBox x:Name="listBoxInvitados" HorizontalAlignment="Left" Height="319" Margin="23,78,0,0" VerticalAlignment="Top" Width="739" SelectionChanged="ListBox_SelectionChanged" Grid.ColumnSpan="3"/>
                    <Button x:Name="agregar" Content="Agregar" HorizontalAlignment="Left" Margin="217,44,0,0" VerticalAlignment="Top" Width="75" Grid.ColumnSpan="2"/>
                    <Button Content="Eliminar" HorizontalAlignment="Left" Margin="23.1,44,0,0" VerticalAlignment="Top" Width="75" Grid.Column="2"/>
                    <CheckBox x:Name="checkBoxConfirmado" Content="Confirmado&#xD;&#xA;" HorizontalAlignment="Left" Margin="253.1,110,0,0" VerticalAlignment="Top" Grid.Column="2"/>
                    <Button Content="Confirmar" HorizontalAlignment="Left" Margin="142.1,44,0,0" VerticalAlignment="Top" Width="75" Grid.Column="2"/>

                </Grid>
            </TabItem>
            <TabItem Header="Presupuesto 4">
                <!-- contenido del tab 3 -->
            </TabItem>
        </TabControl>

    </Grid>
</Window>
