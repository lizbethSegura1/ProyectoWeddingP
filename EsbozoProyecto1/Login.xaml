<Window x:Class="EsbozoProyecto1.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EsbozoProyecto1"
        mc:Ignorable="d"
        Title="Login" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label Grid.Row="0" Content="Usuario:" FontFamily="Monotype Corsiva" FontSize="25" />
        <TextBox Grid.Row="0" Name="Email" Margin="141,10,52.6,73"/>
        <Label Grid.Row="1" Content="Contraseña:" FontSize="25" FontFamily="Monotype Corsiva" />
        <TextBox Grid.Row="1" Name="Passwd" Margin="141,10,52.6,59"/>
        <Button Grid.Row="1" Content="&#xD;&#xA;Entrar&#xD;&#xA;" Margin="178,135,411.6,96" Click="OnLogin" Grid.RowSpan="2" Background="#FFFFA3A3" FontWeight="Bold"/>
        <Button Grid.Row="1" Content="&#xD;&#xA;Registrarse" Margin="461,135,129.6,96" Click="OnCreateUser" Grid.RowSpan="2" Background="#FFFFA3A3" FontWeight="Bold"/>
    </Grid>
</Window>
